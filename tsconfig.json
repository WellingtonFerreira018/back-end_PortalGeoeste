{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/mapsLayer": [
        "lambda/maps/layers/mapsLayer/nodejs/mapRepository"
      ],
      "/opt/nodejs/categoriesLayer": [
        "lambda/categories/layers/categoriesLayer/nodejs/categoryRepository"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}